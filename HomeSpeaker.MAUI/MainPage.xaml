<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeSpeaker.MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="HomeSpeaker Maui" FontSize="24" HorizontalOptions="Center" />

            <Button Text="Load Songs" 
                Command="{Binding LoadSongsAsyncCommand}" />
            <Button Text="Get Status"
                Command="{Binding GetStatusAsyncCommand}" />

            <Label Text="{Binding StatusMessage}" TextColor="Green" Margin="0,10,0,10"/>

            <CollectionView ItemsSource="{Binding Songs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate >
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="{Binding Name}" />
                            <Button Text="Play" 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=PlaySongAsyncCommand}"
                                CommandParameter="{Binding .}"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
