<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HomeSpeaker.MAUI.ViewModels"
             x:Class="HomeSpeaker.MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Button Text="Music" 
                Command="{Binding NavigateToMusicPageCommand}"
                WidthRequest="100" Margin="0, 30, 0, 20"/>
            <Button Text="Server" 
                Command="{Binding NavigateToServerSettingsPageCommand}"
                WidthRequest="100" Margin="0, 30, 0, 20"/>  

            <Label Text="HomeSpeaker Maui" FontSize="24" HorizontalOptions="Center" />
        </VerticalStackLayout>
        
    </ScrollView>
    

</ContentPage>
