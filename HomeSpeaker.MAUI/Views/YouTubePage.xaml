<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HomeSpeaker.MAUI.ViewModels"
             x:Class="HomeSpeaker.MAUI.Views.YouTubePage"
             Title="YouTubePage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="YouTube Search" FontSize="24" HorizontalOptions="Center" />

            <Entry Placeholder="Enter search query..." Text="{Binding SearchQuery}" />
            <Button Text="Search" Command="{Binding SearchYouTubeCommand}" />

            <ListView ItemsSource="{Binding SearchResults}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Image Source="{Binding Thumbnail}" HeightRequest="50" WidthRequest="50"/>
                                <Label Text="{Binding Title}" FontSize="14" />
                                <Button Text="▶" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:YouTubeViewModel}}, Path=PlayVideoCommand}" CommandParameter="{Binding Id}"/>
                                <Button Text="⬇" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:YouTubeViewModel}}, Path=DownloadVideoCommand}" CommandParameter="{Binding Id}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Now Playing:" FontSize="20" />
            <WebView Source="{Binding VideoUrl}" HeightRequest="300" />

            <Label Text="Downloading..." IsVisible="{Binding IsDownloading}" />
            <ProgressBar Progress="{Binding DownloadProgress}" IsVisible="{Binding IsDownloading}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>