<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HomeSpeaker.MAUI.ViewModels"
             x:Class="HomeSpeaker.MAUI.Views.YouTubePage"
             Title="YouTubePage"
              BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="20, 0, 20, 0">
            <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
            <Entry
                Placeholder="What do you want to listen to?"
                Text="{Binding SearchQuery}"
                Margin="0, 10, 0, 10"
                WidthRequest="250"
                TextColor="White"
                BackgroundColor="#121212"/>
            
            <Button
                Text="Search"
                Margin="0, 10, 0, 10"
                Command="{Binding SearchYouTubeCommand}"
                BorderColor="#00334E"
                BorderWidth="1"/>
            </HorizontalStackLayout>

            <ListView ItemsSource="{Binding SearchResults}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Button Text="Play"
                                        BackgroundColor="#34A853"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:YouTubeViewModel}}, Path=PlayVideoCommand}"
                                        CommandParameter="{Binding}"
                                        />
                                <Button Text="Download"
                                        BackgroundColor="#4285F4"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:YouTubeViewModel}}, Path=DownloadVideoCommand}"
                                        CommandParameter="{Binding}" />
                                
                                <Label Text="{Binding}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Now Playing:" FontSize="20" />
            <Label Text="{Binding VideoUrl}" TextColor="Blue" />

            <WebView Source="{Binding VideoUrl}" HeightRequest="300" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>