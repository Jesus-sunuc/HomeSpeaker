<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HomeSpeaker.MAUI.ViewModels"
             x:Class="HomeSpeaker.MAUI.Views.YouTubePage"
             Title="YouTubePage">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="YouTube Search" FontSize="24" HorizontalOptions="Center" />

            <Entry Placeholder="Enter search query..." Text="{Binding SearchQuery}" />
            <Button Text="Search" Margin="0, 10, 0, 10" Command="{Binding SearchYouTubeCommand}" />

            <ListView ItemsSource="{Binding SearchResults}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Label Text="{Binding}"/>
                                <Button Text="Play"
                                        BackgroundColor="#34A853"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:YouTubeViewModel}}, Path=PlayVideoCommand}"
                                        CommandParameter="{Binding}"
                                        />
                                <Button Text="Download"
                                        BackgroundColor="#4285F4"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:YouTubeViewModel}}, Path=DownloadVideoCommand}"
                                        CommandParameter="{Binding}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Now Playing:" FontSize="20" />
            <Label Text="{Binding VideoUrl}" TextColor="Blue" />

            <WebView Source="{Binding VideoUrl}" HeightRequest="300" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>