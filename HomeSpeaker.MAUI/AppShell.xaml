<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeSpeaker.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeSpeaker.MAUI"
    xmlns:views="clr-namespace:HomeSpeaker.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="HomeSpeaker.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Music"
        ContentTemplate="{DataTemplate local:MusicPage}"
        Route="MusicPage"/>

    <ShellContent
        Title="ServerSettings"
        ContentTemplate="{DataTemplate views:ServerSettingsPage}"
        Route="ServerSettingsPage"/>


</Shell>
