<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeSpeaker.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeSpeaker.MAUI"
    xmlns:views="clr-namespace:HomeSpeaker.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="HomeSpeaker.MAUI">
    
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="house.svg"
            ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent
            Title="Playlists"
            Icon="collection.svg"
            ContentTemplate="{DataTemplate local:MusicPage}" />
        <ShellContent
            Title="Search"
            Icon="search.svg"
            ContentTemplate="{DataTemplate views:YouTubePage}" />
        <ShellContent
            Title="Server"
            Icon="database.svg"
            ContentTemplate="{DataTemplate views:ServerSettingsPage}" />    
    </TabBar>
</Shell>
